{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveWatchOutput": true,
    "rootDir": "src",
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "target": "es2017",
    "types": ["node", "webpack-env"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
